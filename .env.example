# Required Environment Variables (override config.yaml defaults)
# These values will override any corresponding values in config/config.yaml if set.

# Database
POSTGRES_DSN="postgresql://user:password@localhost:5432/sortbook_db"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# Paths
EPUB_DIR="/path/to/your/epub/library" # Directory where your EPUB files are located
BOOK_SOURCES="~/project/livres" # Source directory for books
BOOK_TARGET="~/project/livres" # Target directory for processed books

# App Settings
APP_NAME="SortBook v5"
TEXT_PREVIEW_CHARS=500
REQUEST_TIMEOUT=30

# External Service Integrations
# N8N
N8N_PROD_URL="https://n8n.antares.local/webhook/"
N8N_TEST_URL="https://n8n.antares.local/webhook-test/"
N8N_ISBN_PATH="isbn-lookup"
N8N_METADATA_PATH="metadata-lookup"
N8N_VERIFY_SSL=false

# Flowise
FLOWISE_BASE_URL="http://flowise.antares.local"
FLOWISE_CHECK_ID="your_flowise_check_flow_id"
FLOWISE_COVER_ID="your_flowise_cover_flow_id"
